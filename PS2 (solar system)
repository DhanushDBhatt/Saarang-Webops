<script type="text/javascript" src="jquery-2.2.0.min.js"></script>
<script type="text/javascript">

// defining functions to pause,resume and restart animations
	function pause1(){
		document.getElementById('plan1').style.webkitAnimationPlayState="paused";
		console.log("paused1");
	}
	function resume1(){
		document.getElementById('plan1').style.webkitAnimationPlayState="running";
		console.log("resumed1");
	}
	function restart1(){
		// momentarily removes the element and adds it back
		var elm = document.getElementById('plan1');
		var newelm = elm.cloneNode(true);
		elm.parentNode.replaceChild(newelm, elm);
		console.log("restarted1");
	}
	function pause2(){
		document.getElementById('plan2').style.webkitAnimationPlayState="paused";
		console.log("paused2");
	}
	function resume2(){
		document.getElementById('plan2').style.webkitAnimationPlayState="running";
		console.log("resumed2");
	}
	function restart2(){
		var elm = document.getElementById('plan2');
		var newelm = elm.cloneNode(true);
		elm.parentNode.replaceChild(newelm, elm);
		console.log("restarted2");
	}
	function pause3(){
		document.getElementById('plan3').style.webkitAnimationPlayState="paused";
		console.log("paused3");
	}
	function resume3(){
		document.getElementById('plan3').style.webkitAnimationPlayState="running";
		console.log("resumed3");
	}
	function restart3(){
		var elm = document.getElementById('plan3');
		var newelm = elm.cloneNode(true);
		elm.parentNode.replaceChild(newelm, elm);
		console.log("restarted3");
	}
</script>
