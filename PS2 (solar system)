<!-- creating buttons and assigning functions on clicking them -->
<button id="pause1" onclick="pause1()">Pause planet 1</button>
<button id="resume1" onclick="resume1()">Resume planet 1</button>
<button id="restart1" onclick="restart1()">Restart planet 1</button>
<button id="pause2" onclick="pause2()">Pause planet 2</button>
